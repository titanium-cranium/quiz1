<!-- This is a new page for the form to show up. -->

<div class="booyah-box col-xs-10 col-xs-offset-1">
<h1> Enter book details</h1>
<%= simple_form_for @library do |f| %>
  <%= f.input :author %>
  <%= f.input :title %>
  <%= f.input :publisher %>
  <%= f.input :variant %>
  <br />
  <%= f.submit 'Create', :class => 'btn btn-primary' %>
  <% end %>
</div>
